
{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "listFiles": true,
        "removeComments": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "exclude": [ "node_modules", "typings", "scripts"]
}

